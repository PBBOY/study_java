<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.treeview.springboot.mapper.TreeViewMapper">
	<select id="getAll" resultType="com.treeview.springboot.domain.TreeItem">
        select * from newtable td 
    </select>
    
    <select id="valueById" parameterType="long" resultType="String" >
        select td.username from treeitems td where id=#{value}
    </select>
    
    <resultMap id="TreePathMap" type="com.treeview.springboot.domain.TreeItem">
    	<result property="path" column="path" typeHandler="com.treeview.springboot.typehelper.IntegerArrayTypeHelper"/>
    </resultMap>
    
    <select id="getTreeAll" resultMap="TreePathMap">
    	select * from treeitems order by path
    </select>
</mapper>